<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12"
      alignment="TOP_CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.jdbc.HelloController">

  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label text="BubbleChart: Fläche vs. Bevölkerung (Bubble = Lebenserwartung)"
         style="-fx-font-size: 16px; -fx-font-weight: bold;" />

  <HBox spacing="10" alignment="CENTER_LEFT">
    <Label text="Filter (Ländername):"/>
    <TextField fx:id="filterField" promptText="z.B. Ger, Uni, ... " prefWidth="260"/>
    <Button text="Neu laden" onAction="#reloadData"/>
  </HBox>

  <BubbleChart fx:id="bubbleChart" prefWidth="900" prefHeight="520">
    <xAxis>
      <NumberAxis fx:id="xAxis" label="Fläche (SurfaceArea)"/>
    </xAxis>
    <yAxis>
      <NumberAxis fx:id="yAxis" label="Bevölkerung (Population)"/>
    </yAxis>
  </BubbleChart>

</VBox>
